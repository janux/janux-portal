.role-page
	.role-data
		.role-option
			.text Name:
			.control
				input.form-control(type='text' v-model='role.name' required='')

		.role-option
			.text
			.control
				md-checkbox(v-model='role.enabled')
					| Enabled &nbsp;
				md-checkbox(v-model='role.isAlmighty')
					| Is Almighty &nbsp;

		.role-option
			.text Description:
			.control
				textarea.form-control(required='' v-model='role.description') {{ role.description }}

	.role-permissions(v-for='authContextGroup in authContextGroups')
		.group-element {{ authContextGroup.name }}
		table.context-check-list
			tbody
				tr.edit-responsive-role(v-for='authContext in authContextGroup.values')
					td.name {{ authContext.name }}
					td.bits
						div.bit(v-for="authBit in authCBitsToArray(authContext.bit)")
							md-checkbox(v-model='role.authContexts[authContext.name].bit[authBit.label]')
								| {{ authBit.label }}
